<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contacts_listitem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/contact_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toStartOf="@id/contact_actions"
        android:layout_marginEnd="30dp"
        android:textColor="@color/contacts_phone"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/contact_position"/>


    <RelativeLayout
        android:id="@+id/contact_actions"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/contact_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/phone" />

        <ImageButton
            android:id="@+id/contact_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_toStartOf="@+id/contact_call"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/whatsapp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/contact_name"
        android:layout_marginTop="5dp"/>


</RelativeLayout>