<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TimeNoteDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:gravity="center_vertical"
                android:text="12"
                android:textColor="@color/contacts_phone"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/TimeNoteDayStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_toEndOf="@+id/TimeNoteDate"
                android:gravity="center_vertical"
                android:text="В"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:id="@+id/divider2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_toEndOf="@+id/TimeNoteDayStatus"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/TimeNoteTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_toEndOf="@+id/divider2"
                android:gravity="center_vertical"
                android:text="07.30 - 19.20"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TimeNoteTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/goToNote"
                android:layout_marginHorizontal="6dp"
                android:gravity="center_vertical"
                android:text="10.83 ч."
                android:textColor="@color/contacts_phone"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/goToNote"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#00E16363"
                android:src="@android:drawable/ic_media_play" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>